
from math import sin, pi, cos

g = 9.81               # ускорение свободного падения, м/с2

a = float(input('Введите угол вектора скорости в градусах: ')) * pi / 180
v0 = float(input('Введите начальную скорость тела в м/с: '))

x = v0 * cos(a) * (2 * v0 * sin(a)) / g
y = (v0 ** 2 * sin(a) ** 2) / (2 * g)

print('\n\nРезультат:\n')

print(f'Дальность полета тела {x:g} м')
print(f'Наибольшая высота подъема тела {y:g} м\n')

print('________________________________________\n')

